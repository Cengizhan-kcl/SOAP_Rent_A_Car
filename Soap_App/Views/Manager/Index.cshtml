                                            <th>Şirket Geliri</th>
                                            <th>Puan</th>
                                            <th>Aşılan Km Değeri</th>
                                            <th>Dönem</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            @if (Session["ovKmIn"] != null)
                                            {
                                                foreach (OverKmInfo item in (List<OverKmInfo>)Session["ovKmIn"])
